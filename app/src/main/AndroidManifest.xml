<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="app.storyteller">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS"/>

    <application
            android:allowBackup="true"
            android:icon="@drawable/ic_story_teller_launcher"
            android:label="@string/app_name"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".AuthenticationActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".LoadProfileActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".SignInActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".MainActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".StoryChooserActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".StoryCreatorActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".StoryEditorActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".StoryReaderActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>