<resources>

    <!--
      ~~ StoryTeller Base : AppTheme.
      -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"/>

    <!--
      ~~ Activity
      -->
    <style name="AppTheme.Activity">
        <item name="android:background">@color/white</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="AppTheme.Button" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@color/grey</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    <style name="AppTheme.Button.Primary">
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="AppTheme.Button.Primary.WithBorder">
        <item name="android:textColor">@color/primary</item>
        <item name="android:background">@drawable/white_button_with_border</item>
    </style>
    <style name="AppTheme.Form">
        <item name="android:layout_width">275dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:paddingBottom">60dp</item>
    </style>
    <style name="AppTheme.TextInput">
        <item name="android:inputType">textCapSentences|textAutoCorrect</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="AppTheme.Spinner">
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>
    <style name="AppTheme.Spinner.Primary">
        <item name="android:textColor">@color/primary</item>
        <item name="android:background">@drawable/white_button_with_border</item>
    </style>

    <!--
      ~~ Activity - Header
      -->
    <style name="AppTheme.Activity.Header">
        <item name="android:background">@color/primary</item>
        <item name="android:paddingRight">@dimen/header_horizontal_padding</item>
    </style>
    <style name="AppTheme.Activity.Header.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">1dp</item>
        <item name="background">@color/transparent</item>
    </style>
    <style name="AppTheme.Activity.WhiteHeader">
        <item name="android:background">@color/white</item>
    </style>
    <style name="AppTheme.Activity.WhiteHeader.Title">
        <item name="android:textColor">@color/primary</item>
        <item name="android:fontFamily">sans-serif-thin</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">1dp</item>
        <item name="background">@color/transparent</item>
    </style>
    <style name="AppTheme.Activity.Header.BackBtn">
        <item name="android:layout_width">@dimen/header_back_btn_width</item>
        <item name="android:layout_height">@dimen/header_back_btn_height</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="background">@color/transparent</item>
    </style>

    <!--
      ~~ List Item
      -->
    <style name="AppTheme.ListItem">
        <item name="android:paddingTop">@dimen/list_item_vertical_padding</item>
        <item name="android:paddingBottom">@dimen/list_item_vertical_padding</item>
        <item name="android:paddingRight">@dimen/list_item_horizontal_padding</item>
        <item name="android:paddingLeft">@dimen/list_item_horizontal_padding</item>
        <item name="android:background">@color/white</item>
    </style>

    <!--
      ~~ Dialog
      -->
    <style name="AppTheme.Dialog" parent="AppTheme.Activity"/>
    <style name="AppTheme.Dialog.Title">
        <item name="android:fontFamily">sans-serif</item> <!--  roboto light  -->
        <item name="android:textColor">@color/primary</item>
        <item name="android:paddingBottom">22dp</item>
        <item name="android:textSize">32dp</item>
    </style>
    <style name="AppTheme.Dialog.Content">
        <item name="android:layout_width">-1dp</item><!--  Match parent  -->
    </style>
    <style name="AppTheme.Dialog.Content.Separator">
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/primary</item>
        <item name="android:layout_marginBottom">28dp</item>
    </style>
    <style name="AppTheme.Dialog.Content.Button">
        <item name="android:layout_height">-2dp</item><!--  Wrap content  -->
        <item name="android:layout_marginBottom">18dp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:background">@color/grey</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:fontFamily">sans-serif-thin</item><!--  roboto thin  -->
    </style>
    <style name="AppTheme.ToggleStars">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">15dp</item>
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
    </style>
</resources>