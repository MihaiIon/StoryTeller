<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:screenOrientation="portrait">

    <!-- Profile Section -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/profile_section"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="@dimen/profile_section_weight"
        android:background="@color/primary">

        <!-- Settings -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="@dimen/profile_settings_weight"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/profile_section_margins_top"
            android:background="@color/primary">

            <ImageButton
                android:id="@+id/settings_btn"
                android:layout_width="@dimen/settings_btn_dimensions"
                android:layout_height="@dimen/settings_btn_dimensions"
                android:background="@drawable/settings_icon"/>

        </LinearLayout>

        <!-- Profile -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="@dimen/profile_profile_weight"
            android:gravity="center_vertical|center_horizontal"
            android:weightSum="1">


            <WebView
                android:id="@+id/webview_logo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" />

        </LinearLayout>

        <!-- Tokens -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="@dimen/profile_tokens_weight"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/profile_section_margins_top"
            android:background="@color/primary">

            <ToggleButton
                android:id="@+id/token1"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:background="@drawable/toggle_tokens"
                android:textOn=""
                android:textOff=""
                android:clickable="false"/>

            <ToggleButton
                android:id="@+id/token2"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:textOn=""
                android:textOff=""
                android:background="@drawable/toggle_tokens"
                android:clickable="false"/>

            <ToggleButton
                android:id="@+id/token3"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:textOn=""
                android:textOff=""
                android:background="@drawable/toggle_tokens"
                android:clickable="false"/>

        </LinearLayout>
    </LinearLayout>


    <!-- Action Zone Section -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/asdjkalsdkajsd"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="@dimen/action_zone_section_weight"
        android:layout_gravity="center"
        android:gravity="center">

        <Button
            android:id="@+id/testing_story_chooser_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go to StoryChooser"/>

        <ImageButton
            android:id="@+id/playBtn"
            android:layout_width="@dimen/play_btn_size"
            android:layout_height="@dimen/play_btn_size" />

    </LinearLayout>


    <!-- Slides Indicator Section -->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/sildes_indicator_section"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="@dimen/slides_indicatior_section_weight"
        android:background="@color/softGrey">

    </LinearLayout>
</LinearLayout>