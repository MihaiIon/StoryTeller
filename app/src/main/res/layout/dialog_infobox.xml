<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:paddingTop="30dp"
    android:paddingBottom="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:id="@+id/linearLayout">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#f2f2f2"
            android:text="Story Information"
            android:textColor="@color/primary"
            android:textSize="36sp" />

        <View
            android:layout_width="match_parent"
            style="@style/AppTheme.Dialog.Content.Separator"
            android:id="@+id/view" />

        <TextView
            android:id="@+id/dialog_infobox_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            tools:text="Title :" />

        <TextView
            android:id="@+id/dialog_infobox_character"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="10dp"
            tools:text="Main Character: " />

        <TextView
            android:id="@+id/dialog_infobox_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="5dp"
            tools:text="Theme :" />


    </LinearLayout>


</RelativeLayout >